<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#451961"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFICATION SETTINGS"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- Push Notifications -->
        <Switch
            android:id="@+id/switch_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Push Notifications"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <!-- Email Updates -->
        <Switch
            android:id="@+id/switch_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive Email Summaries"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- New Trailers -->
        <Switch
            android:id="@+id/switch_trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trailer Release Alerts"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- In-App Banner Alerts -->
        <Switch
            android:id="@+id/switch_banners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In-App Banner Notifications"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- Do Not Disturb -->
        <Switch
            android:id="@+id/switch_dnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do Not Disturb Mode"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
