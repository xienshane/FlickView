<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#451961"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="CLEAR DOWNLOADS"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/downloads_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This will delete all downloaded movies and offline content from your device."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:fontFamily="sans-serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="#EAD9DE"
            android:backgroundTint="#FF6E40"
            android:padding="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="#FF5252"
            android:layout_marginEnd="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_confirm_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:textColor="#EAD9DE"
            android:backgroundTint="#FF5252"
            android:padding="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="#FF6E40"/>
    </LinearLayout>
</LinearLayout>
