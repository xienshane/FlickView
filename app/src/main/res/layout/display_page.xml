<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#451961"
    android:padding="20dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_back2"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#3D2955"
                android:src="@drawable/baseline_arrow_back_ios_24" />

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISPLAY SETTINGS"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>


        <!-- Divider Line -->
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFC107"
            android:background="#FFC107"/>

        <!-- Theme Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#502869"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/theme_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/theme_options"
                android:padding="12dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_popup_background"/>
        </androidx.cardview.widget.CardView>

        <!-- Font Size Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#502869"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/font_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:entries="@array/font_options"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/spinner_popup_background" />
        </androidx.cardview.widget.CardView>

        <!-- Show Movie Posters Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#502869"
            android:layout_marginTop="30dp">

            <Switch
                android:id="@+id/switch_posters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Movie Posters"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif"/>
        </androidx.cardview.widget.CardView>

        <!-- Reduce Animations Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#502869"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">

            <Switch
                android:id="@+id/switch_reduce_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reduce Animations"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
