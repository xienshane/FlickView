<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#451961"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGION PREFERENCES"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- Region Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Region"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <Spinner
            android:id="@+id/region_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/region_options"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#ffffff" />

        <!-- Region Format Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Region Format"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <Spinner
            android:id="@+id/region_format_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/region_formats"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#ffffff" />

        <!-- Content Language Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content Language"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <Spinner
            android:id="@+id/content_language_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/content_languages"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#ffffff" />

        <!-- Content Rating Toggle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Content Rating Filter"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <Switch
            android:id="@+id/switch_content_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
