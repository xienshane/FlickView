<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/button_back2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_arrow_back_ios_25"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:elevation="8dp" />

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About The Developers"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp" />

        </RelativeLayout>

        <!-- SPACE between header and first card -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <!-- Developer 1 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="500dp"
            android:backgroundTint="#3D2955">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Profile Pic -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/janeen"
                    android:background="@drawable/icon_circle"
                    android:scaleType="centerCrop" />

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Janeen Gabrielle Lim"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <!-- Course -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bachelor of Science in Computer Science"
                    android:textColor="#C9B6D9"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <!-- Divider -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="#FFC107"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dev_janeen_description"
                    android:text="Bringing ideas to life through UI/UX design and front-end development, Janeen ensures that FlickView is not just functional but also visually stunning and easy to use. With a knack for crafting intuitive interfaces, they make sure that users can browse, review, and discover movies effortlessly, creating an experience as engaging as the films themselves."
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center"
                    android:justificationMode="inter_word" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SPACE between first and second card -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <!-- Developer 2 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="500dp"
            android:backgroundTint="#3D2955">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Profile Pic -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/lovely"
                    android:background="@drawable/icon_circle"
                    android:scaleType="centerCrop" />

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lovely Shane Ong"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <!-- Course -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bachelor of Science in Computer Science"
                    android:textColor="#C9B6D9"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <!-- Divider -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="#FFC107"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dev_lovely_description"
                    android:text="With a deep love for movies and an eye for seamless functionality, Lovely specializes in backend development and database management. Their expertise ensures that FlickView runs smoothly, handling user reviews, ratings, and recommendations with efficiency. Passionate about innovation, they focus on building a robust and scalable system that delivers a top-notch experience for every movie enthusiast."
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center"
                    android:justificationMode="inter_word" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
